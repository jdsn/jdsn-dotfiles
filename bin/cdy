#!/bin/bash

BP="/data/yast/SVN/yast"
BR=
MOD=

if [ ! -z $1 ]
then
  BR=$1
  shift
  if [ $BR != "trunk" ]
  then
    BP=${BP}/branches
    BP=`ls -d ${BP}/* | grep -i ${BR} | head -n 1`
  else
    BP=${BP}/trunk
  fi
else
  BP=${BP}/branches
fi


if [ ! -z $1 ]
then
  MOD=$1
  shift
  BP=`ls -d ${BP}/* | grep -i "${BP}/${MOD}" | head -n 1`
fi

cd $BP
